                                .circle.third
                                .circle.third
                                .circle.third
                                .circle.third
                        ul.footer__ul 
                            li.footer__li 
                                a.footer__a(href="#")=a1 
                            li.footer__li 
                                a.footer__a(href="#")=a2 
                            li.footer__li 
                                a.footer__a(href="#")=a3 
                            li.footer__li 

        .footer__blocks
            .footer__img
                .footer__points.points
                    .circle.third
                    .circle.third
                    .circle.third
                    .circle.third
                a.footer__logo(href="#") 
                    img.footer__logo-img(src="./assets/imgs/img15.svg", alt="картинка")
